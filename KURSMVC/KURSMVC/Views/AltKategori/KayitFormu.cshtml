@model KURSMVC.Models.ALT_KATEGORI
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var kategori = ViewData["kategori"] as List<KURSMVC.Models.KATEGORI>;

}


<div>
    <form id="frm1" method="post" action="~/Admin/AltKategori/KayitFormu" class="form-horizontal">

        <div class="form-group">
            <div class="col-sm-2">Alt Kategori Refno</div>
            <div class="col-sm-10"><input class="form-control" type="text" name="ALT_KATEGORI_REFNO" id="ALT_KATEGORI_REFNO" value="@Model.ALT_KATEGORI_REFNO" /></div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">Kategori Adı</div>
            <div class="col-sm-10">
                <select name="KATEGORI_REFNO" id="KATEGORI_REFNO" class="form-control">
                    @for (int i = 0; i < kategori.Count; i++)
                    {
                        if (kategori[i].KATEGORI_REFNO == Model.KATEGORI_REFNO)
                        {
                            <option selected value="@kategori[i].KATEGORI_REFNO">@kategori[i].KATEGORI_ADI</option>
                        }
                        else
                        {
                            <option value="@kategori[i].KATEGORI_REFNO">@kategori[i].KATEGORI_ADI</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">Alt Kategori Adı</div>
            <div class="col-sm-10"><input class="form-control" type="text" name="ALT_KATEGORI_ADI" id="ALT_KATEGORI_ADI" value="@Model.ALT_KATEGORI_ADI" /></div>
        </div>

        <div class="text-center">
            <input type="submit" value="Kaydet" class="btn btn-default" />
            <a href="~/Admin/AltKategori/Index" value="Vazgec" class="btn btn-default">Vazgeç</a>
        </div>
    </form>
</div>
