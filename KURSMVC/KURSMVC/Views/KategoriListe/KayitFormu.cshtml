@model KURSMVC.Models.KATEGORI
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Scripts.Render("~/Scripts/jquery-1.7.1.min.js")
@Scripts.Render("~/ckeditor/ckeditor.js")
@Scripts.Render("~/ckeditor/ckfinder/ckfinder.js")
@Scripts.Render("~/Scripts/jquery.validate.js")
<script src="~/ckfinder/ckfinder.js"></script>
<div id="kayit">
    <form id="frm1" method="post" action="~/Admin/KategoriListe/KayitFormu" class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-2">Kategori Refno</div>
            <div class="col-sm-10"><input type="text" name="KATEGORI_REFNO" id="KATEGORI_REFNO" value="@Model.KATEGORI_REFNO" /></div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">Kategori Adı</div>
            <div class="col-sm-10"><input type="text" name="KATEGORI_ADI" id="KATEGORI_ADI" value="@Model.KATEGORI_ADI" /></div>
        </div>
        <div class="text-center">
            <input type="submit" value="Kaydet" class="btn btn-default" />
            <a href="~/Admin/KategoriListe/Index" class="btn btn-default">Vazgeç</a>
        </div>
    </form>
</div>
<script type="text/javascript">
    var editor = CKEDITOR.instances['KATEGORI_ADI'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('KATEGORI_ADI', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    @*CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');*@
</script>
